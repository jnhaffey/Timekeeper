<Window x:Class="Timekeeper.VsExtension.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="462" Width="537" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" TextWrapping="NoWrap" AcceptsReturn="True" AcceptsTab="True" Name="TextBox" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Margin="10" Padding="10" Width="80" Click="Button_Click" />
            <Button Content="Cancel" Margin="10" Padding="10" Width="80" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Window>
