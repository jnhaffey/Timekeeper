<Window x:Class="Timekeeper.VsExtension.CategorySelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CategorySelection" Height="130" Width="300" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical">
        <Label Content="Category:" />
        <ComboBox ItemsSource="{Binding}" Name="CategoryCombo">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Label}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text=" " />
        <Button Content="OK" />
    </StackPanel>
</Window>
